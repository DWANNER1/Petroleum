{
  "name": "petroleum-dashboard",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/worker"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web dev:worker",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:worker": "npm --workspace apps/worker run dev",
    "seed": "npm --workspace apps/api run seed",
    "build": "npm-run-all build:api build:web build:worker",
    "build:api": "npm --workspace apps/api run build",
    "build:web": "npm --workspace apps/web run build",
    "build:worker": "npm --workspace apps/worker run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
